<div id="menu">
    <div id="menu__inner">
        <section class="menu__section">
            <div class="menu__type-title">홈</div>
            <a class="menu__a-wrapper" href="/" id="/">
                <i class="fa-solid fa-wifi"></i>
                <span>오픈 채널</span>
            </a>
            <a class="menu__a-wrapper" href="/myprofile" id="myprofile">
                <i class="fa-regular fa-user"></i>
                <span>내 프로필 관리</span>
            </a>
            <a class="menu__a-wrapper" href="/mychannels?searchWord=all" id="mychannels">
                <i class="fa-solid fa-list"></i>
                <span>내 채널</span>
            </a>
            <!-- <a class="menu__a-wrapper" href="#">알림</a> -->
            <a class="menu__a-wrapper" href="/channel" id="channel">
                <i class="fa-regular fa-plus"></i>
                <span>채널 추가</span>
            </a>
            <a class="menu__a-wrapper" href="/wishchannels?searchWord=all" id="wishchannels">
                <i class="fa-regular fa-heart"></i>
                <span>관심 채널</span>
            </a>
        </section>
        <section class="menu__section">
            <div class="menu__type-title">참여 채널</div>
            <% if(channels) { %>
                <% for(const channel of channels) { %>
                    <a class="menu__channel" href="/mychannel/<%= channel._id %>?searchWord=info" id="mychannel-<%= channel._id %>">
                        <img src="<%= channel.thumbnail %>"><span><%= channel.channelName %></span> 
                    </a>
                <% } %>
            <% } %>
            
            <% if(chatRooms){ %>
                <div id="chat" class="title">
                    <i class="fa-regular fa-comment fa-lg"></i>
                    <span>채팅 방</span>
                </div>
                <div id="chat-list" class="menu__div-wrapper">
                    <div class="item">
                        <button id="modal-open-add-chat"> 
                            <i class="fa-solid fa-plus fa-lg"></i>
                            <span>채팅방 추가</span> 
                        </button>
                    </div>
                    <% if(chatRooms.length > 0) { %>
                        <% for(let room of chatRooms) { %>
                            <div class="item">
                                <a href="/channel/chat/<%= room.channelId %>/<%= room._id %>">
                                    <i class="fa-regular fa-message"></i>
                                    <span><%= room.roomName %></span>
                                        
                      
                                </a>
                            </div>
                        <% } %>
                    <% } %>
                </div>
            <% } %>
        </section>
        <%- include('./copyright.ejs') %>
        <!-- 대화방 추가창(모달창) => 채널에 접속 중일때-->
        <% if(chatRooms) { %>
            <div class="container-chat hidden">
                <div class="modal-chat hidden">
                    <form action="/client/chat/<%= channel._id %>" method="post">
                        <h2>채팅방</h2>
                        <div class="box__input">
                            <label for="roomName">채팅방 명</label>
                            <span><input type="text" name="roomName" id="roomName" placeholder="채팅방명을 입력하세요."></span>
                        </div>
                        <div class="box__button__submit">
                            <button type="submit">완료</button>
                            <a id="modal-close-add-chat">취소</a>
                        </div>
                    </form>
                </div>
            </div>
        <% } %> 
    </div>
</div>  