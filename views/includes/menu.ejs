<div id="menu">
    <a class="menu__a-wrapper" href="/mychannels">내 채널</a>
    <% if(state === 'off') { %>
        <a class="menu__a-wrapper" href="/channel"><span> + </span> 채널 추가 </a>
    <% } else { %>
        <a class="menu__a-wrapper" href="/client/mychannels/<%= channel._id %>"> 채널 프로필</a>
    <% } %>    
    <div class="menu__div-wrapper">
        <div class="title">
            # 업무 태스트 -> 토글버튼
        </div>
        <div class="item">
            Soulmate 개발자팀: Soulmate 개발일지
        </div>
        <div class="item">
            디자인 작업 현황
        </div>
    </div>
    <div class="menu__div-wrapper">
        <div class="title">
            # 고객문의
        </div>
    </div>
    <% if(chatRooms){ %>
        <div class="menu__div-wrapper">
            <div class="title">
                # 참여 대화방 -> 토글버튼
            </div>
            <div class="item">
                <button id="modal-open-add-chat"> + 대화방 추가 </button>
            </div>
            <% for(let room of chatRooms) { %>
                <div class="item">
                    <a href="/client/chat/<%= room.channelId %>/<%= room._id %>"><%= room.roomName %></a>
                </div>
            <% } %>
        </div>
    <% } %>

    <!-- 대화방 추가창(모달창) => 채널에 접속 중일때-->
    <% if(chatRooms) { %>
        <div class="container-chat hidden">
            <div class="modal-chat hidden">
                <form action="/client/chat/<%= channel._id %>" method="post">
                    <div class="box__input-chat-room">
                        <h1>새로운 채팅방을 생성하세요.</h1>
                    </div>
                    <div class="box__input-chat-room">
                        <input type="text" name="roomName" id="roomName" placeholder="채팅방명을 입력하세요.">
                    </div>
                    <div class="box__input-chat-room">
                        <button type="submit">방 생성</button>
                    </div>
                    <div class="box__input-chat-room">
                        <a id="modal-close-add-chat">취소</a>
                    </div>
                </form>
            </div>
        </div>
    <% } %> 
</div>