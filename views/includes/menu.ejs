<div id="menu">
    <div id="menu__inner">
        <section class="menu__section">
            <div class="menu__type-title">홈</div>
            <a class="menu__a-wrapper" href="/" id="/">
                <i class="fa-solid fa-wifi"></i>
                <span>오픈 채널</span>
            </a>
            <a class="menu__a-wrapper" href="/myprofile" id="myprofile">
                <i class="fa-regular fa-user"></i>
                <span>내 프로필 관리</span>
            </a>
            <a class="menu__a-wrapper" href="/mychannels?searchWord=all" id="mychannels">
                <i class="fa-solid fa-list"></i>
                <span>내 채널</span>
            </a>
            <!-- <a class="menu__a-wrapper" href="#">알림</a> -->
            <a class="menu__a-wrapper" href="/channel" id="channel">
                <i class="fa-regular fa-plus"></i>
                <span>채널 추가</span>
            </a>
            <a class="menu__a-wrapper" href="/wishchannels?searchWord=all" id="wishchannels">
                <i class="fa-regular fa-heart"></i>
                <span>관심 채널</span>
            </a>
        </section>
        <section class="menu__section">
            <div class="menu__type-title">참여 채널</div>
            <% if(channels) { %>
                <% for(const channel of channels) { %>
                    <a class="menu__channel" href="/mychannel/<%= channel._id %>?searchWord=info" id="mychannel">
                        <img src="<%= channel.thumbnail %>"><span><%= channel.channelName %></span> 
                    </a>
                <% } %>
            <% } %>
            <% if(state === 'on') { %>
                <% if(workSpaces){ %>
                    <div id="workspace" class="title">
                        <i class="fa-solid fa-cubes-stacked fa-lg"></i>
                        <span>워크스페이스</span>
                    </div>
                    <div id="workspace-list" class="menu__div-wrapper">
                        <div class="item">
                            <button id="modal-open-add-workspace">
                                <i class="fa-solid fa-plus fa-lg"></i>
                                <span>워크스페이스 추가</span> 
                            </button>
                        </div>
                        <% for(let workSpace of workSpaces) { %>
                            <div class="item">
                                <a href="/channel/workspace/<%= workSpace.channelId %>/<%= workSpace._id %>?sort=lastest&&sortNum=-1">
                                    <i class="fa-solid fa-hashtag fa-sm"></i>
                                    <span><%= workSpace.workSpaceName %></span>
                                    <p>2023-07-14</p>
                                    <p>안녕하세요 이번에 새로 입사하게된 개발자 입니다.</p>
                                </a>
                            </div>
                        <% } %>
                    </div>
                <% } %>    
                <!-- <div id="workspace-list" class="menu__a-wrapper">
                    <i class="fa-solid fa-bookmark fa-lg"></i>
                    <span>스크랩</span>
                </div>
                <div id="workspace-list" class="menu__a-wrapper">
                    <span>채널 소식</span>
                </div> -->
            <% } %>
            <% if(chatRooms){ %>
                <div id="chat" class="title">
                    <i class="fa-regular fa-comment fa-lg"></i>
                    <span>채팅 방</span>
                </div>
                <div id="chat-list" class="menu__div-wrapper">
                    <div class="item">
                        <button id="modal-open-add-chat"> 
                            <i class="fa-solid fa-plus fa-lg"></i>
                            <span>채팅방 추가</span> 
                        </button>
                    </div>
                    <% for(let room of chatRooms) { %>
                        <div class="item">
                            <a href="/channel/chat/<%= room.channelId %>/<%= room._id %>">
                                <i class="fa-regular fa-message"></i>
                                <span><%= room.roomName %></span>
                                <% if(room.chats.length > 0) { 
                                    room.chats[0].createdAt = new Date(room.chats[0].createdAt).toLocaleDateString('ko', {
                                        year: 'numeric',
                                        month: 'long',
                                        day: 'numeric',
                                        weekday: 'long'
                                    });%>
                                    <p><%= room.chats[0].createdAt %></p>
                                    <p><%= room.chats[0].chat %></p>
                                <% } %>
                            </a>
                        </div>
                    <% } %>
                </div>
            <% } %>
        </section>
        <%- include('./copyright.ejs') %>
        <!-- 워크스페이스 추가창(모달창) => 채널에 접속 중일때-->
        <% if(workSpaces) { %>
            <div class="container-workspace hidden">
                <div class="modal-workspace hidden">
                    <form action="/client/workspace/<%= channel._id %>" method="post">
                        <div class="box__input-workspace-room">
                            <h1>새로운 워크스페이스를 생성하세요.</h1>
                        </div>
                        <div class="box__input-workspace-room">
                            <label for="open">전체공개
                                <input type="checkbox" name="open" id="open" placeholder="전체공개" value=true>
                            </label>
                        </div>
                        <div class="box__input-workspace-room">
                            <input type="text" name="workSpaceName" id="workSpaceName" placeholder="워크스페이스 제목을 입력하세요.">
                        </div>
                        <div class="box__input-workspace-room">
                            <textarea name="comment" placeholder="워크스페이스 설명 스크립트를 자유롭게 입력하세요."></textarea>
                        </div>
                        <div class="box__input-workspace-room">
                            <button type="submit">워크스페이스 생성</button>
                        </div>
                        <div class="box__input-workspace-room">
                            <a id="modal-close-add-workspace">취소</a>
                        </div>
                    </form>
                </div>
            </div>
        <% } %> 
        <!-- 대화방 추가창(모달창) => 채널에 접속 중일때-->
        <% if(chatRooms) { %>
            <div class="container-chat hidden">
                <div class="modal-chat hidden">
                    <form action="/client/chat/<%= channel._id %>" method="post">
                        <div class="box__input-chat-room">
                            <h1>새로운 채팅방을 생성하세요.</h1>
                        </div>
                        <div class="box__input-chat-room">
                            <input type="text" name="roomName" id="roomName" placeholder="채팅방명을 입력하세요.">
                        </div>
                        <div class="box__input-chat-room">
                            <button type="submit">방 생성</button>
                        </div>
                        <div class="box__input-chat-room">
                            <a id="modal-close-add-chat">취소</a>
                        </div>
                    </form>
                </div>
            </div>
        <% } %> 
    </div>
</div>  